<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.charanajayworks.pubgguide">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />

    <application
        android:allowBackup="true"
        android:hardwareAccelerated="true"
        android:icon="@drawable/pubgguide_icon"
        android:label="@string/app_name"
        android:largeHeap="true"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".SplashScreenActivity"
            android:label="@string/app_name"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".CategoryActivity" />
        <activity android:name=".MapsActivity" />
        <activity android:name=".MapDisplayAcitivity" />
        <activity android:name=".GeneralDataActivity" />
        <activity android:name=".GridsActivity"/>
        <activity android:name=".LootsActivity"/>
        <activity android:name=".TipsActivity"/>
        <activity android:name=".GuidesActivity"/>
        <activity android:name=".QuestionsActivity"/>
        <activity android:name=".VideoActivity"/>
        <activity android:name=".GuidesDetailActivity"/>
        <activity android:name=".WeaponsActivity"/>
        <activity android:name=".ThrowablesActivity"/>
        <activity android:name=".DetailsActivity"/>
        <activity android:name=".AmmunitionActivity"/>
        <activity android:name=".AttachmentsActivity"/>
        <activity android:name=".MeleeActivity"/>
        <activity android:name=".ConsumablesActivity"/>
        <activity android:name=".EquipmentActivity"/>

        <service android:name=".MyFirebaseInstanceIDService">
            <intent-filter>
                <action android:name="com.google.firebase.INSTANCE_ID_EVENT" />
            </intent-filter>
        </service>

    </application>

</manifest>